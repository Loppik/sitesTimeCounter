{
    "name": "Addiction time counter",
    "description": "...",
    "version": "1.0",
    "permissions": ["<all_urls>", "storage", "tabs"],
    "browser_action": {
        "default_icon": "addiction.png",
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
}